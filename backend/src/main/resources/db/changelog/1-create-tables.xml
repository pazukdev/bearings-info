<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_user_table" author="sviarkaltsau">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="role" type="enum('ADMIN', 'USER')"/>
        </createTable>
        <rollback>
            <dropTable tableName="user"/>
        </rollback>
    </changeSet>

    <changeSet id="create_manufacturer_table" author="sviarkaltsau">
        <createTable tableName="manufacturer">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="founded" type="varchar(255)"/>
            <column name="defunct" type="varchar(255)"/>
        </createTable>
        <rollback>
            <dropTable tableName="manufacturer"/>
        </rollback>
    </changeSet>

    <changeSet id="create_spark_plug_table" author="sviarkaltsau">
        <createTable tableName="spark_plug">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="production_start_year" type="int"/>
            <column name="production_stop_year" type="int"/>
            <column name="manufacturer_id" type="bigint"/>
            <column name="heat_range" type="int"/>
        </createTable>
        <rollback>
            <dropTable tableName="spark_plug"/>
        </rollback>
    </changeSet>

    <changeSet id="create_oil_table" author="sviarkaltsau">
        <createTable tableName="oil">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="production_start_year" type="int"/>
            <column name="production_stop_year" type="int"/>
            <column name="manufacturer_id" type="bigint"/>
            <column name="base" type="varchar(255)"/>
            <column name="viscosity" type="varchar(255)"/>
            <column name="seasonality" type="varchar(255)"/>
        </createTable>
        <rollback>
            <dropTable tableName="oil"/>
        </rollback>
    </changeSet>

    <changeSet id="create_bearing_table" author="sviarkaltsau">
        <createTable tableName="bearing">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="production_start_year" type="int"/>
            <column name="production_stop_year" type="int"/>
            <column name="manufacturer_id" type="bigint"/>
            <column name="type" type="varchar(255)"/>
            <column name="rolling_element" type="varchar(255)"/>
            <column name="rolling_elements_quantity" type="int"/>
        </createTable>
        <rollback>
            <dropTable tableName="bearing"/>
        </rollback>
    </changeSet>

    <changeSet id="create_seal_table" author="sviarkaltsau">
        <createTable tableName="seal">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="production_start_year" type="int"/>
            <column name="production_stop_year" type="int"/>
            <column name="manufacturer_id" type="bigint"/>
            <column name="rotation" type="varchar(255)"/>
            <column name="material" type="varchar(255)"/>
        </createTable>
        <rollback>
            <dropTable tableName="seal"/>
        </rollback>
    </changeSet>

    <changeSet id="create_engine_table" author="sviarkaltsau">
        <createTable tableName="engine">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="production_start_year" type="int"/>
            <column name="production_stop_year" type="int"/>
            <column name="manufacturer_id" type="bigint"/>
            <column name="spark_plug_id" type="bigint"/>
            <column name="power_hp" type="int"/>
            <column name="torque_nm" type="int"/>
            <column name="speed_rpm" type="int"/>
        </createTable>
        <rollback>
            <dropTable tableName="engine"/>
        </rollback>
    </changeSet>

    <changeSet id="create_motorcycle_table" author="sviarkaltsau">
        <createTable tableName="motorcycle">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="production_start_year" type="int"/>
            <column name="production_stop_year" type="int"/>
            <column name="manufacturer_id" type="bigint"/>
            <column name="engine_id" type="bigint"/>
            <column name="weight_g" type="int"/>
            <column name="fuel_capacity_l" type="double"/>
        </createTable>
        <rollback>
            <dropTable tableName="motorcycle"/>
        </rollback>
    </changeSet>

    <changeSet id="create_wishlist_table" author="sviarkaltsau">
        <createTable tableName="wishlist">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
        </createTable>
        <rollback>
            <dropTable tableName="wishlist"/>
        </rollback>
    </changeSet>

    <changeSet id="create_token_table" author="sviarkaltsau">
        <createTable tableName="verification_token">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKeyName="verification_token_pk"
                             primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="token" type="varchar(500)"/>
            <column name="date" type="date"/>
        </createTable>
    </changeSet>

    <changeSet id="create_engine_oil_table" author="sviarkaltsau">
        <createTable tableName="engine_oil">
            <column name="engine_id" type="bigint">
                <constraints foreignKeyName="fk_engine_oil_engine_id" references="engine (id)"/>
            </column>
            <column name="oil_id" type="bigint">
                <constraints foreignKeyName="fk_engine_oil_oil_id" references="oil (id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="engine_oil"/>
        </rollback>
    </changeSet>

    <changeSet id="create_engine_bearing_table" author="sviarkaltsau">
        <createTable tableName="engine_bearing">
            <column name="engine_id" type="bigint">
                <constraints foreignKeyName="fk_engine_bearing_engine_id" references="engine (id)"/>
            </column>
            <column name="bearing_id" type="bigint">
                <constraints foreignKeyName="fk_engine_bearing_bearing_id" references="bearing (id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="engine_bearing"/>
        </rollback>
    </changeSet>

    <changeSet id="create_wishlist_bearing_table" author="sviarkaltsau">
        <createTable tableName="wishlist_bearing">
            <column name="wishlist_id" type="bigint">
                <constraints foreignKeyName="fk_wishlist_bearing_engine_id" references="engine (id)"/>
            </column>
            <column name="bearing_id" type="bigint">
                <constraints foreignKeyName="fk_wishlist_bearing_bearing_id" references="bearing (id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="wishlist_bearing"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
